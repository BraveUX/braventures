extends templates/_default

block includes
    include layouts/includes/_mixins

//- Page Head Variables
block vars
    -var title = '';
    -var description = '';

block content
    .svg__spritesheet
        include ./layouts/includes/inline.svg

    header.header
        .header__box
            +inline-svg('braventures-logo', 'header__logo')
            +inline-svg('braventures-title', 'header__title')
            a.header__link(href="https://braveux.com" target="_blank") Visit Brave UX

    .content
        .content__wrapper
            p.content__title Products and projects made for ourselves and the UX community.

            include layouts/general/_ventures

    //- Footer
    include layouts/general/_footer