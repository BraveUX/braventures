mixin headContent(title, description)
    title= title
    //- Only add a description if one is defined for the specific page
    if ( description.length > 0 )
        meta(name='description' content= description)
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1, minimum-scale=1.0')
    meta(name='apple-mobile-web-app-capable' content='yes')
    meta(name='apple-mobile-web-app-status-bar-style' content='black-translucent')

    //- Favicons
    link(rel='apple-touch-icon', sizes='180x180', href='/assets/favicons/apple-touch-icon.png')
    link(rel='icon', type='image/png', sizes='32x32', href='/assets/favicons/favicon-32x32.png')
    link(rel='icon', type='image/png', sizes='16x16', href='/assets/favicons/favicon-16x16.png')
    link(rel='manifest', href='/assets/favicons/site.webmanifest')
    link(rel='mask-icon', href='/assets/favicons/safari-pinned-tab.svg', color='#18181a')
    link(rel='shortcut icon', href='/assets/favicons/favicon.ico')
    meta(name='msapplication-TileColor', content='#18181a')
    meta(name='msapplication-config', content='/assets/favicons/browserconfig.xml')
    meta(name='theme-color', content='#ffffff')

    //- Font (Sentinel)
    link(rel='stylesheet' href='//cloud.typography.com/7775932/607446/css/fonts.css')

    //- Font (Nudista)
    link(rel='stylesheet' href='https://use.typekit.net/zao2jpo.css')

    //- Styles
    if ( productionMode )
        link(rel='stylesheet' href='assets/stylesheets/main.min.css')
    else
        link(rel='stylesheet' href='assets/stylesheets/main.css')

    //- Show content if JS is disabled
    noscript
        style.
            .venture {
                opacity: 1;
            }

    //- If extra head content is necessary per page
    block head
